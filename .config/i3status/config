# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    # due to the i3 has:
    # - bar.mode hide
    interval = 5
}

order += "wireless _first_"
order += "battery all"

wireless _first_ {
    format_up = "W: %essid%quality"
    format_down = "W: down"
}

battery all {
    format = "%status %percentage (%consumption)"
    last_full_capacity = true
}
