[user]
	name = Azat Khuzhin
	email = a3at.mail@gmail.com
[core]
	autocrlf = input
	pager = less -FRSX
	whitespace = trailing-space
[push]
	default = upstream
[color]
	ui = auto
[alias]
	di = diff
	ci = commit
	cis = commit --signoff
	co = checkout
	ann = blame
	st = status
	amk = am --keep-non-patch
	ams = am -s
	amks = am -s --keep-non-patch
	purr = pull --rebase
	ready = rebase -i @{u}
	pull = pull --ff-only
[apply]
	whitespace = fix

#
# KDE projects
# Usage: git clone kde:amarok
#
[url "git://anongit.kde.org/"]
    insteadOf = kde:
[url "git@git.kde.org:"]
	pushInsteadOf = kde:

#
# Github
# Usage: git clone github:user/project
#
[url "git://github.com/"]
	insteadOf = github:
[url "git@github.com:"]
	pushInsteadOf = github:
