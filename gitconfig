[user]
	name = Azat Khuzhin
	email = a3at.mail@gmail.com
[core]
	autocrlf = input
	pager = less -FRSX
	whitespace = trailing-space
[push]
	default = upstream
[color]
	ui = auto
[help]
	# $ git lgo
	# You called a Git command named 'lgo', which does not exist.
	# Continuing under the assumption that you meant 'log'
	# in 1.0 seconds automatically...
	autocorrect = 10
[alias]
	di = diff

	ci = commit
	cis = commit --signoff
	amend = commit --amend

	co = checkout
	ann = blame
	st = status

	patch = add --patch

	last = log -1
	oneline = log --oneline

	staged = diff --cached
	both = diff HEAD

	# sha1 of the current branch's HEAD
	sha1 = !sh -c 'git rev-parse ${1-`echo HEAD`}' -
	# shows a 7 character abbreviation of a reference, defaulting to HEAD
	abbrev = !sh -c 'git rev-parse --short ${1-`echo HEAD`}' -

	amk = am --keep-non-patch
	ams = am -s
	amks = am -s --keep-non-patch

	purr = pull --rebase
	puff = pull --ff-only

	ready = rebase -i @{u}
	ri = rebase --interactive
[apply]
	whitespace = fix

#
# KDE projects
# Usage: git clone kde:amarok
#
[url "git://anongit.kde.org/"]
    insteadOf = kde:
[url "git@git.kde.org:"]
	pushInsteadOf = kde:

#
# Github
# Usage: git clone github:user/project
#
[url "git://github.com/"]
	insteadOf = github:
[url "git@github.com:"]
	pushInsteadOf = github:
