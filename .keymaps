# load it with loadkeys(1)
# or set it in /etc/vconsole.conf

include "linux-with-two-alt-keys"

# left
keycode 29  = Alt # 29 == L_Ctrl/Control
keycode 125 = Alt # 125 == Win
keycode 56  = Control # 56 == Alt

# right
keycode 97  = Alt # 97 == R_Ctrl/Control
keycode 100 = Control # 100 == Alt/AltGr
